{
  "type": "module",
  "name": "@faergeek/make-webpack-config",
  "version": "24.0.1",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./index.js"
    },
    "./hmr/node": "./hmr/node.js",
    "./hmr/node?*": "./hmr/node.js?*"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/faergeek/make-webpack-config.git"
  },
  "author": "Sergei Slipchenko <faergeek@gmail.com>",
  "license": "MIT",
  "files": [
    "dist/index.d.ts",
    "dist/index.d.ts.map",
    "hmr/node.js",
    "index.js"
  ],
  "scripts": {
    "cleanup": "rimraf dist",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --max-warnings 0 .",
    "typecheck": "tsc --noEmit",
    "build": "tsc",
    "generate-changelog": "git-cliff --bump -o CHANGELOG.md && prettier --write CHANGELOG.md",
    "version": "pnpm run generate-changelog && git add CHANGELOG.md"
  },
  "packageManager": "pnpm@10.15.0",
  "peerDependencies": {
    "@types/node": "^22.17.1",
    "webpack": "^5.36.2"
  },
  "dependencies": {
    "@faergeek/tiny-browser-hmr-webpack-plugin": "^1.2.1",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.6.0",
    "@swc/core": "^1.13.0",
    "@types/webpack-bundle-analyzer": "^4.7.0",
    "css-loader": "^7.0.0",
    "lightningcss": "^1.16.1",
    "lightningcss-loader": "^3.0.0",
    "mini-css-extract-plugin": "^2.0.0",
    "mini-svg-data-uri": "^1.3.3",
    "source-map-loader": "^5.0.0",
    "swc-loader": "^0.2.6",
    "webpack-bundle-analyzer": "^4.4.1"
  },
  "optionalDependencies": {
    "utf-8-validate": "^5.0.10"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@faergeek/eslint-config": "^7.0.0",
    "@types/node": "^22.17.1",
    "eslint": "^9.19.0",
    "git-cliff": "^2.10.0",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  }
}
