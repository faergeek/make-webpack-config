{
  "type": "module",
  "name": "@faergeek/make-webpack-config",
  "version": "0.0.0-semantically-released",
  "main": "index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./index.js"
    },
    "./hmr/node": "./hmr/node.js",
    "./hmr/node?*": "./hmr/node.js?*"
  },
  "repository": "git@github.com:faergeek/make-webpack-config.git",
  "author": "Sergey Slipchenko <faergeek@gmail.com>",
  "license": "MIT",
  "files": [
    "dist/index.d.ts",
    "dist/index.d.ts.map",
    "hmr/node.js",
    "index.js"
  ],
  "scripts": {
    "cleanup": "rimraf dist",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --max-warnings 0 .",
    "typecheck": "tsc --noEmit",
    "build": "tsc"
  },
  "packageManager": "pnpm@10.13.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "bufferutil",
      "utf-8-validate"
    ],
    "ignoredBuiltDependencies": [
      "core-js-pure"
    ]
  },
  "peerDependencies": {
    "@types/node": "^24.0.15",
    "webpack": "^5.36.2"
  },
  "dependencies": {
    "@faergeek/tiny-browser-hmr-webpack-plugin": "^1.0.1",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.6.0",
    "@swc/core": "^1.13.0",
    "@types/webpack-bundle-analyzer": "^4.7.0",
    "css-loader": "^7.0.0",
    "escape-string-regexp": "^5.0.0",
    "lightningcss": "^1.16.1",
    "lightningcss-loader": "^3.0.0",
    "mini-css-extract-plugin": "^2.0.0",
    "mini-svg-data-uri": "^1.3.3",
    "source-map-loader": "^5.0.0",
    "swc-loader": "^0.2.6",
    "webpack-bundle-analyzer": "^4.4.1"
  },
  "optionalDependencies": {
    "utf-8-validate": "^5.0.10"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@faergeek/eslint-config": "^7.0.0",
    "@types/node": "^24.0.15",
    "eslint": "^9.19.0",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.0.0",
    "typescript": "^5.8.3"
  }
}
